	.top-links.flex-item
		.nav-bar
			ul.menu 
				- if user_signed_in?
					li
						= link_to 'Add new garage', new_garage_path, remote: true, "data-open" => "garageModal"
					li
						= link_to 'Logout', destroy_user_session_path, method: :delete, remote: true, id: "logout"
					li
						| Hello 
						= current_user.full_name
				- else 
					li
						= link_to 'Login', new_user_session_path, class: 'button'

